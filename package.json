{
  "name": "@Broadshield/github-action-generate-tag-name-from-maven-or-gradle",
  "version": "1.0.5",
  "description": "Generates a Git tag name for Pull Releases and Branches based on the application version in pom.xml or gradle.settings files",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url:": "git@github.com:Broadshield/github-action-generate-tag-name-from-maven-or-gradle.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "keywords": [
    "actions",
    "node",
    "maven",
    "gradle",
    "tagging"
  ],
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@actions/github": "^5.0.0",
    "@octokit/rest": "^18.12.0",
    "fast-xml-parser": "^4.0.7",
    "java-properties": "^1.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@typescript-eslint/typescript-estree": "^5.18.0",
    "@vercel/ncc": "^0.33.3",
    "dotenv": "^16.0.0",
    "esbuild": "^0.14.28",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "github-action-readme-generator": "^1.0.12",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-circus": "^27.5.1",
    "jest-junit": "^13.0.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3",
    "typescript-eslint-language-service": "^5.0.0",
    "yarn-or-npm": "^3.0.1"
  },
  "scripts": {
    "test": "NODE_ENV=testing jest",
    "test-ci": "NODE_ENV=testing jest --ci --reporters=default --reporters=jest-junit",
    "start": "node lib/main.ts",
    "format:fix": "trunk fmt",
    "format": "trunk check",
    "lint:fix": "yon run format:fix;eslint . --ext .js,.ts --fix",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "package": "rimraf lib dist;esbuild src/main.ts --bundle --sourcemap --platform=node --outfile=dist/index.cjs --target=node16 --format=cjs",
    "build-docker": "yarn run build-debug;docker build -t github-action-generate-tag-name-from-maven-or-gradle .",
    "release": "yarn run lint:fix && yarn run typecheck && yarn run package && git add dist",
    "all": "yarn run format:fix && yarn run lint:fix && yarn run package && yarn test",
    "prepare": "husky install;git config --global rebase.autosquash true",
    "pre-commit": "lint-staged && yon run package && git add dist && yarn run generate-docs",
    "pre-push": "yarn format:fix",
    "preversion": "echo 'Running test';yarn test",
    "generate-docs": "github-action-readme-generator && prettier --write .ghadocs.json README.md && git add .ghadocs.json README.md",
    "version": "echo 'Run versioning commands';yarn generate-docs;echo \"::set-output name=tag::v${npm_package_version}\"",
    "postversion": "echo 'Running post versioning commands';git push --tags -f && git push -f && echo \"Successfully released version $npm_package_version!\""
  },
  "jest-junit": {
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run release; git add dist"
    }
  },
  "lint-staged": {
    "__tests__/**/*.js": "eslint --cache --fix",
    "*.ts": [
      "eslint --cache --fix"
    ]
  }
}
