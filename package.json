{
  "name": "github-action-cleanup-releases-and-tags",
  "version": "1.0.0",
  "description": "This removes unused Tags and Releases that are created during the PR process",
  "main": "index.js",
  "repository": "git@github.com:Broadshield/github-action-cleanup-releases-and-tags.git",
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "actions-toolkit": "^4.0.0",
    "gradle-to-js": "^2.0.0",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.25.1",
    "eslint": "^5.16.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3"
  },
  "scripts": {
    "test": "NODE_ENV=testing jest",
    "start": "node ./index.js",
    "build": "ncc build index.js --minify",
    "build-debug": "ncc build index.js",
    "build-docker": "docker build -t github-action-generate-tag-name-from-maven-or-gradle ."
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/helpers/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run build-debug;git add dist"
    }
  }
}
